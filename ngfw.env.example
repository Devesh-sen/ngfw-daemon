# ---- NGFW Daemon environment (example) ----
# Copy to ngfw.env and fill secrets before starting the service.
# IMPORTANT: do NOT commit your real ngfw.env with API keys to GitHub.

# Polling / alerting
POLL_INTERVAL=15
HIGH_ALERT_THRESHOLD=3
HIGH_ALERT_INTERVAL=5

# AbuseIPDB (primary threat intel) - replace placeholder with your key
ABUSEIPDB_API_KEY=REPLACE_WITH_YOUR_ABUSEIPDB_KEY
ABUSEIPDB_THRESHOLD=70
ABUSEIPDB_TIMEOUT_S=4.0
ABUSEIPDB_CACHE_TTL_S=1800

# FireHOL (fallback) - this file lives in the repo (included)
FIREHOL_ENABLED=1
FIREHOL_FILE=/home/USERNAME/ngfw_daemon/firehol_level1.netset
FIREHOL_RELOAD_S=3600

# Fail policy if threat intel unavailable: closed|open
FAIL_POLICY=closed

# Logging & state (repo-local)
FAST_LOG=/var/log/suricata/fast.log
BLOCKS_LOG=/home/USERNAME/ngfw_daemon/logs_and_utilities/blocks.log
NGFW_LOG_DIR=/home/USERNAME/ngfw_daemon/logs_and_utilities
NGFW_MAIN_LOG=/home/USERNAME/ngfw_daemon/logs_and_utilities/daemon.log
NGFW_ALERTS_JSON=/home/USERNAME/ngfw_daemon/logs_and_utilities/alerts.json
NGFW_BLOCKED_JSON=/home/USERNAME/ngfw_daemon/logs_and_utilities/blocked.json
OFFSET_FILE=/home/USERNAME/ngfw_daemon/logs_and_utilities/fastlog.offset

